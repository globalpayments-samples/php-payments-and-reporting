# Go Payment API Environment Configuration
# Copy this file to .env and configure your values

# Server Configuration
PORT=8080
GIN_MODE=release
LOG_LEVEL=info

# Global Payments API Configuration
GP_APP_ID=your_app_id_here
GP_APP_KEY=your_app_key_here
GP_BASE_URL=https://apis.sandbox.globalpay.com/ucp
GP_CHANNEL=CP
GP_COUNTRY=US

# Global Payments API Endpoints
GP_TOKEN_URL=/accesstoken
GP_VERIFY_URL=/payment-methods
GP_PAYMENT_URL=/transactions
GP_REPORTING_URL=/transactions

# Security Configuration
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60s

# CORS Configuration  
CORS_ALLOWED_ORIGINS=*
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With

# Database Configuration (if needed in future)
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=payments
# DB_USER=payments_user
# DB_PASSWORD=payments_password
# DB_SSL_MODE=disable

# Monitoring Configuration (if needed)
# METRICS_ENABLED=true
# METRICS_PORT=9090
# HEALTH_CHECK_TIMEOUT=5s

# Logging Configuration
LOG_FORMAT=json
LOG_OUTPUT=stdout

# TLS Configuration (for production)
# TLS_ENABLED=false
# TLS_CERT_FILE=/path/to/cert.pem
# TLS_KEY_FILE=/path/to/key.pem