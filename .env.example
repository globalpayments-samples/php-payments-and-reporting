# GP-API Integration - Environment Configuration Template
# Copy this file to .env and update with your actual values

# GP-API Configuration
# Get these values from your Global Payments Developer Portal
GP_API_APP_ID=your_app_id_here
GP_API_APP_KEY=your_app_key_here
GP_API_ENVIRONMENT=sandbox

# Account Configuration (required for verification)
GP_API_ACCOUNT_ID=your_account_id_here
GP_API_ACCOUNT_NAME=Transaction_Processing

# Service URLs (use appropriate URL based on environment)
# Sandbox: https://apis.sandbox.globalpay.com
# Production: https://apis.globalpay.com
SERVICE_URL=https://apis.sandbox.globalpay.com

# Environment Settings
APP_ENV=development
ENABLE_REQUEST_LOGGING=false

# Security Settings (Optional)
SESSION_TIMEOUT=1800
MAX_REQUEST_SIZE=10M

# Logging Configuration (Optional)
LOG_LEVEL=error
LOG_RETENTION_DAYS=30

# Development Settings (Optional)
DEBUG_MODE=false
SHOW_ERRORS=false