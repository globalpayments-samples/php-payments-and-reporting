# Heartland Payment Integration - Environment Configuration Template
# Copy this file to .env and update with your actual values

# GlobalPayments API Configuration
# Get these values from your GlobalPayments sandbox/production account
SECRET_API_KEY=your_secret_api_key_here
DEVELOPER_ID=000000
VERSION_NUMBER=0000

# API Endpoints
# Sandbox URL for testing - change to production URL when ready
SERVICE_URL=https://cert.api2.heartlandportico.com

# Environment Settings
APP_ENV=development
ENABLE_REQUEST_LOGGING=false

# Security Settings (Optional)
SESSION_TIMEOUT=1800
MAX_REQUEST_SIZE=10M

# Logging Configuration (Optional)
LOG_LEVEL=error
LOG_RETENTION_DAYS=30

# Development Settings (Optional)
DEBUG_MODE=false
SHOW_ERRORS=false