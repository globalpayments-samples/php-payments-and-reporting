# Global Payments API Configuration
# Copy this file to .env and update with your actual credentials

# Required: API Keys from Global Payments Developer Portal
PUBLIC_API_KEY=pkapi_cert_your_public_key_here
SECRET_API_KEY=skapi_cert_your_secret_key_here

# Optional: Developer Information (for tracking and support)
DEVELOPER_ID=000000
VERSION_NUMBER=0000

# Optional: Service URL (defaults to sandbox if not specified)
# Sandbox: https://cert.api2.heartlandportico.com
# Production: https://api2.heartlandportico.com
SERVICE_URL=https://cert.api2.heartlandportico.com

# Optional: Application Settings
APP_ENV=development
APP_DEBUG=true
APP_LOG_LEVEL=debug

# Optional: Security Settings
ALLOWED_ORIGINS=http://localhost:8000,https://yourdomain.com
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# Optional: Database Configuration (if storing verification results)
# DB_CONNECTION=mysql
# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_DATABASE=card_auth
# DB_USERNAME=your_username
# DB_PASSWORD=your_password

# Optional: Redis Configuration (for caching/rate limiting)
# REDIS_HOST=127.0.0.1
# REDIS_PASSWORD=null
# REDIS_PORT=6379

# Optional: Email Configuration (for notifications)
# MAIL_MAILER=smtp
# MAIL_HOST=smtp.gmail.com
# MAIL_PORT=587
# MAIL_USERNAME=your_email@gmail.com
# MAIL_PASSWORD=your_app_password
# MAIL_ENCRYPTION=tls
# MAIL_FROM_ADDRESS=noreply@yourdomain.com
# MAIL_FROM_NAME="Card Authentication"