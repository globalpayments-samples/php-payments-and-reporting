{
    "name": "globalpayments/php-card-authentication-example",
    "description": "PHP example demonstrating card authentication and verification using Global Payments SDK",
    "type": "project",
    "keywords": [
        "payments",
        "authentication",
        "verification", 
        "global-payments",
        "php",
        "sdk"
    ],
    "require": {
        "php": ">=8.0",
        "globalpayments/php-sdk": "^13.1",
        "vlucas/phpdotenv": "^5.5"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "squizlabs/php_codesniffer": "^3.6"
    },
    "autoload": {
        "psr-4": {
            "GlobalPayments\\Examples\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "GlobalPayments\\Examples\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "serve": "php -S localhost:8000",
        "test": "phpunit --colors=always",
        "test:unit": "phpunit --colors=always --testdox",
        "test:coverage": "phpunit --colors=always --coverage-html coverage-html --coverage-text",
        "test:filter": "phpunit --colors=always --filter",
        "lint": "phpcs --standard=PSR12 src/",
        "lint:fix": "phpcbf --standard=PSR12 src/",
        "quality": ["@lint", "@test"]
    },
    "config": {
        "process-timeout": 0,
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "license": "MIT",
    "authors": [
        {
            "name": "Global Payments",
            "email": "developer@globalpay.com"
        }
    ]
}